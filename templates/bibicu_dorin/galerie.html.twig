{% extends "/bibicu_dorin/base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Galerie de imagini ({{ images|length }})
            </h1>

            <span class="font-light text-gray-500 italic">
                Created by Dorin B.
            </span>
        </div>
    </div>



     {% if app.user %}
        {% if app.user.roles[0] =='ROLE_ADMIN' %}
            <div class="mx-auto w-4/5 my-8">
                    <a 
                        href="/BibicuDorin/createImage" 
                        class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                        Adauga o imagine
                    </a>
                </div>
        {% endif %}
    {% endif %}

    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for image in images %}
            <div class="text-center pt-8 pb-4">
                <img src="{{asset(image.imagePath)}}" style="width:600px;height:auto;" alt="">
                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ image.title }}
                </h2>

                <span class="text-gray-500">
                    <span class="italic text-sm text-gray-800">28.01.2022
                </span>

                <p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
                    {{ image.description }}
                </p>

                <a href="/BibicuDorin/images/{{image.id}}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-gray-800 hover:text-white">
                    Deschide imaginea
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}