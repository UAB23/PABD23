<!-- templates/blog/index.html.twig -->

{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h2>Articles</h2>
    <ul>
        {% for article in articles %}
            <li><a href="{{ path('blog_show', {'id': article.id}) }}">{{ article.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
