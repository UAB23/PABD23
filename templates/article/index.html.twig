{% extends 'base.html.twig' %}

{% block body %}
    <h1>My Blog</h1>

    {% if articles is empty %}
        <p>No articles found.</p>
    {% else %}
        {% for article in articles %}
            <h2>{{ article.title }}</h2>
            <p>{{ article.content }}</p>
            <p>Author: {{ article.author }}</p>
            <hr>
        {% endfor %}
    {% endif %}
{% endblock %}