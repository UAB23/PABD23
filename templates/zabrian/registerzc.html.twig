{% extends 'zabrian/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
       #register-tab {
        text-decoration: none;
        border-bottom: 2px solid #007bff;
       } 
    </style>
{% endblock %}
{% block body %}
    <div class="card">
        <div class="card-content">
            <h1 style="text-align: center; margin-bottom: 100px;">Register</h1>
            {{ form_start(registrationForm) }}
                <div class="form-group">
                    <label for="{{ registrationForm.email.vars.id }}">Email:</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'type': 'email'}}) }}
                </div>
                <div class="form-group">
                    <label for="{{ registrationForm.plainPassword.vars.id }}">Password:</label>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <label for="{{ registrationForm.agreeTerms.vars.id }}">Agree to Terms</label>
                </div>

                <div class="button-container">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}

