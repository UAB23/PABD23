{% extends 'base.html.twig' %}

{% block title %}BlogZC List{% endblock %}

{% block body %}
    <div class="container">
        <h1>BlogZC List</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Author</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                </tr>
            </thead>
            <tbody>
                {% for blog in blogs %}
                    <tr>
                        <td>{{ blog.title }}</td>
                        <td>{{ blog.content }}</td>
                        {# <td>{{ blog.author_id }}</td> #}
                        <img src={{blog.img}} />
                        <td>{{ blog.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

